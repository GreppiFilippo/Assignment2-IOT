<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Console appender -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- File appender -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/drone-remote-unit.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/drone-remote-unit.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>7</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- 
    LOG LEVELS (from most to least verbose):
    - TRACE: Very detailed, step-by-step execution
    - DEBUG: Detailed debugging info (use in development)
    - INFO: General informational messages (default for production)
    - WARN: Warning messages
    - ERROR: Error messages
    - OFF: Disable logging completely
    
    USAGE:
    - Development: Use DEBUG to see all details
    - Production: Use INFO to see only important events
    - Troubleshooting: Switch to DEBUG temporarily
    -->

    <!-- Root logger (default for all classes) -->
    <root level="DEBUG">
        <appender-ref ref="CONSOLE" />
        <appender-ref ref="FILE" />
    </root>

    <!-- 
    Application specific logging 
    Set to DEBUG for development, INFO for production
    To disable app logs completely, set to OFF or WARN
    -->
    <logger name="it.unibo.dronehangar" level="WARN" />
    
    <!-- 
    External libraries (reduce noise)
    Uncomment to suppress verbose library logs
    -->
    <logger name="jssc" level="WARN" />
    <logger name="javafx" level="WARN" />
</configuration>
