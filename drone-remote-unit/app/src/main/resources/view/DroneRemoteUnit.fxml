<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.TilePane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane styleClass="root" stylesheets="@DroneRemoteUnit.css" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.unibo.dronehangar.remote.controller.DroneRemoteUnitControllerImpl">
   <!-- Title Section -->
   <top>
      <VBox styleClass="header">
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
         <children>
            <Label styleClass="title" text="DRONE REMOTE UNIT">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Label>
            <Label styleClass="subtitle" text="Smart Drone Hangar Control System">
               <font>
                  <Font size="12.0" />
               </font>
               <VBox.margin>
                  <Insets top="5.0" />
               </VBox.margin>
            </Label>
         </children>
      </VBox>
   </top>
   <center>
      <ScrollPane fitToHeight="false" fitToWidth="true" styleClass="scrollPane">
         <content>
            <VBox spacing="20.0">
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
               <children>
                  <VBox spacing="10.0" styleClass="section">
                     <padding>
                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                     </padding>
                     <children>
                        <Label styleClass="section-title" text="Drone Commands">
                           <font>
                              <Font name="System Bold" size="16.0" />
                           </font>
                        </Label>
                        <Separator styleClass="section-separator" />
                        <TilePane fx:id="buttonBox" alignment="CENTER" hgap="15.0" prefTileHeight="40.0" prefTileWidth="140.0" tileAlignment="CENTER" vgap="10.0">
                           <VBox.margin>
                              <Insets top="10.0" />
                           </VBox.margin>
                        </TilePane>
                     </children>
                  </VBox>
                  <VBox spacing="10.0" styleClass="section">
                     <padding>
                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                     </padding>
                     <children>
                        <Label styleClass="section-title" text="Drone Status">
                           <font>
                              <Font name="System Bold" size="16.0" />
                           </font>
                        </Label>
                        <Separator styleClass="section-separator" />
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                           <VBox.margin>
                              <Insets top="5.0" />
                           </VBox.margin>
                           <children>
                              <Label styleClass="label-text" text="State:" />
                                <Label fx:id="lblDroneState" accessibleHelp="Current state of the drone." accessibleText="Drone state: REST" focusTraversable="true" styleClass="label-value, label-success" text="REST">
                                 <font>
                                    <Font name="System Bold" size="14.0" />
                                 </font>
                              </Label>
                           </children>
                        </HBox>
                     </children>
                  </VBox>
                  <VBox spacing="10.0" styleClass="section">
                     <padding>
                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                     </padding>
                     <children>
                        <Label accessibleHelp="Current hangar status." accessibleText="Hangar Status" styleClass="section-title" text="Hangar Status">
                           <font>
                              <Font name="System Bold" size="16.0" />
                           </font>
                        </Label>
                        <Separator styleClass="section-separator" />
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                           <VBox.margin>
                              <Insets top="5.0" />
                           </VBox.margin>
                           <children>
                              <Label styleClass="label-text" text="State:" />
                                <Label fx:id="lblHangarState" accessibleHelp="Current hangar state." accessibleText="Hangar state: NORMAL" focusTraversable="true" styleClass="label-value, label-success" text="NORMAL">
                                 <font>
                                    <Font name="System Bold" size="14.0" />
                                 </font>
                              </Label>
                           </children>
                        </HBox>
                     </children>
                  </VBox>
                  <VBox spacing="10.0" styleClass="section">
                     <padding>
                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                     </padding>
                     <children>
                        <Label styleClass="section-title" text="Distance to Ground">
                           <font>
                              <Font name="System Bold" size="16.0" />
                           </font>
                        </Label>
                        <Separator styleClass="section-separator" />
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                           <VBox.margin>
                              <Insets top="5.0" />
                           </VBox.margin>
                           <children>
                              <Label styleClass="label-text" text="Distance:" />
                                <Label fx:id="lblDistance" accessibleHelp="Shows the current distance of the drone from the ground." accessibleText="Distance to ground: -- centimeters" focusTraversable="true" styleClass="label-value, label-info" text="-- cm">
                                 <font>
                                    <Font name="System Bold" size="14.0" />
                                 </font>
                              </Label>
                           </children>
                        </HBox>
                     </children>
                  </VBox>
                  <VBox spacing="10.0" styleClass="section">
                     <padding>
                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                     </padding>
                     <children>
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                           <children>
                              <Label styleClass="label-normal" text="Connection:" />
                                <Label fx:id="lblConnectionStatus" accessibleHelp="Serial connection status to the device." accessibleText="Connection: DISCONNECTED" focusTraversable="true" styleClass="label-error" text="DISCONNECTED">
                                 <font>
                                    <Font name="System Bold" size="12.0" />
                                 </font>
                              </Label>
                           </children>
                        </HBox>
                        <Label fx:id="lblErrorMessage" styleClass="label-error" text="" visible="false" wrapText="true">
                           <font>
                              <Font name="System Italic" size="11.0" />
                           </font>
                           <VBox.margin>
                              <Insets top="5.0" />
                           </VBox.margin>
                        </Label>
                     </children>
                  </VBox>
               </children>
            </VBox>
         </content>
      </ScrollPane>
   </center>
   <bottom>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="CENTER" spacing="10.0" styleClass="footer">
               <padding>
                  <Insets bottom="15.0" left="20.0" right="20.0" top="15.0" />
               </padding>
               <children>
                  <Label alignment="CENTER_RIGHT" minWidth="100.0" prefWidth="120.0" styleClass="label-normal" text="Serial Port:" />
                  <ComboBox fx:id="serialComboBox" maxWidth="Infinity" promptText="Not selected" styleClass="serialComboBox" HBox.hgrow="ALWAYS">
                     <HBox.margin>
                        <Insets right="75.0" />
                     </HBox.margin></ComboBox>
               </children>
            </HBox>
            <HBox alignment="CENTER" spacing="10.0" styleClass="footer">
               <padding>
                  <Insets bottom="15.0" left="20.0" right="20.0" top="15.0" />
               </padding>
               <children>
                  <Label alignment="CENTER_RIGHT" minWidth="100.0" prefWidth="120.0" styleClass="label-normal" text="Baud Rate:" />
                  <ComboBox fx:id="baudComboBox" maxWidth="Infinity" promptText="Not selected" styleClass="serialComboBox" HBox.hgrow="ALWAYS">
                     <HBox.margin>
                        <Insets right="75.0" />
                     </HBox.margin></ComboBox>
               </children>
            </HBox>
         </children>
      </VBox>
   </bottom>
</BorderPane>
